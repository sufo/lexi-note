<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for older versions -->
    <style name="Theme.LexiNote" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Splash Screen Theme for older versions -->
    <!-- The compatibility library will use these values to approximate the splash screen. -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo_padded</item>
        <item name="postSplashScreenTheme">@style/Theme.LexiNote</item>
    </style>
</resources>